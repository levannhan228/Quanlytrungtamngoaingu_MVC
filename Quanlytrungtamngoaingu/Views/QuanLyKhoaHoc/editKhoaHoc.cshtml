@model Quanlytrungtamngoaingu.Models.KhoaHoc

@{
    ViewBag.Title = "Themoi";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}
<style type="text/css">
    .control-label {
        margin-right: 10px !important;
    }
</style>
<h2>Chỉnh sửa</h2>

@using (Html.BeginForm("editKhoaHoc", "QuanLyKhoaHoc", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Khóa Học</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Makh)
    <div class="form-group">
        @Html.LabelFor(model => model.Tenkhoahoc, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tenkhoahoc, new { htmlAttributes = new { @class = "form-control" } })
            <span style="color:red"> @Html.ValidationMessageFor(model => model.Tenkhoahoc, "", new { @class = "text-danger" })</span>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Giaban, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Giaban, new { htmlAttributes = new { @class = "form-control" } })
            <span style="color:red"> @Html.ValidationMessageFor(model => model.Giaban, "", new { @class = "text-danger" })</span>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AnhBia, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AnhBia, new { htmlAttributes = new { @class = "form-control" } })
            <span style="color:red"> @Html.ValidationMessageFor(model => model.AnhBia, "", new { @class = "text-danger" })</span>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Thoigianhoc, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Thoigianhoc, new { htmlAttributes = new { @class = "form-control" } })
            <span style="color:red"> @Html.ValidationMessageFor(model => model.Thoigianhoc, "", new { @class = "text-danger" })</span>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Siso, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Siso, new { htmlAttributes = new { @class = "form-control" } })
            <span style="color:red"> @Html.ValidationMessageFor(model => model.Siso, "", new { @class = "text-danger" })</span>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Mann, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Mann, (IEnumerable<SelectListItem>)ViewBag.Ngonngu)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.GiaoVien.Tengv, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Magv, (IEnumerable<SelectListItem>)ViewBag.GiangVien)

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Mota, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Mota)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="padding-left: 200px !important;margin-top:20px">
            <!-- Button trigger modal -->
            <input type="submit" value="Save" class="btn btn-default" data-toggle="modal" data-target="#exampleModalCenter">
            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Thông báo</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Bạn có chắc rằng muốn thay đôi thông tin
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "viewKhoaHoc")
</div>
