@model Quanlytrungtamngoaingu.Models.NgonNgu

@{
    ViewBag.Title = "themmoiNgonNgu";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}
<style type="text/css">
    .control-label {
        margin-right: 10px !important;
    }
</style>
<h2>Thêm mới</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Ngôn Ngữ</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Mann, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mann, new { htmlAttributes = new { @class = "form-control" } })
                <span style="color:red">@Html.ValidationMessageFor(model => model.Mann, "", new { @class = "text-danger" })</span>
                <span style="color:red">@ViewBag.TrungMa</span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Tennn, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tennn, new { htmlAttributes = new { @class = "form-control" } })
                <span style="color:red">@Html.ValidationMessageFor(model => model.Tennn, "", new { @class = "text-danger" })</span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="padding-left: 200px !important;margin-top:20px">
                <!-- Button trigger modal -->
                <input type="submit" value="Create" class="btn btn-default" data-toggle="modal" data-target="#exampleModalCenter">
                <!-- Modal -->
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Thông báo</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Bạn có chắc rằng muốn thêm thông tin
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "viewNgonNgu")
</div>
